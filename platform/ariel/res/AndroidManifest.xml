<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:androidprv="http://schemas.android.com/apk/prv/res/android"
    package="ariel.platform"
    coreApp="true" android:sharedUserId="android.uid.system"
    android:sharedUserLabel="@string/bt_enable_title">
    <!--android:sharedUserLabel="@string/ariel_system_label">-->

    <!-- Ariel IntentFirewall broadcasts -->
    <protected-broadcast android:name="ariel.intent.action.APPLICATION_BLOCKED" />
    <protected-broadcast android:name="ariel.intent.action.SERVICE_BLOCKED" />
    <protected-broadcast android:name="ariel.intent.action.BROADCAST_BLOCKED" />
    <protected-broadcast android:name="ariel.intent.action.UPDATE_FW" />

    <!-- Allows an application to write to CM system settings -->
    <permission android:name="ariel.permission.WRITE_SETTINGS"
                android:protectionLevel="signature|privileged" />

    <permission android:name="ariel.permission.LOCK_SCREEN"
        android:protectionLevel="signature|privileged" />

    <permission android:name="ariel.permission.INTENT_FIREWALL"
                android:protectionLevel="signature|privileged|development" />

    <!-- Allows an application to write to secure CM system settings.
        <p>Not for use by third-party applications. -->
    <permission android:name="ariel.permission.WRITE_SECURE_SETTINGS"
                android:protectionLevel="signature|privileged|development" />

    <application android:process="system"
                 android:persistent="true"
                 android:hasCode="false"                
                 android:allowClearUserData="false"
                 android:killAfterRestore="false"
                 android:supportsRtl="true"/>
<!--android:label="@string/ariel_system_label"-->

</manifest>
